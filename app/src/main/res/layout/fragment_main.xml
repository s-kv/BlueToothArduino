<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonLeftUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:rotation="45"
                android:src="@drawable/ic_left"
                app:srcCompat="@drawable/ic_left" />

            <ImageButton
                android:id="@+id/imageButtonUp"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:src="@drawable/ic_up"
                app:srcCompat="@drawable/ic_up" />

            <ImageButton
                android:id="@+id/imageButtonRightUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:rotation="-45"
                android:src="@drawable/ic_right"
                app:srcCompat="@drawable/ic_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButtonUp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonLeft"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_weight="0.98"
                android:background="?android:attr/colorBackground"
                android:src="@drawable/ic_left"
                app:srcCompat="@drawable/ic_left" />

            <ImageButton
                android:id="@+id/imageButtonStop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:background="?android:attr/colorBackground"
                android:src="@drawable/ic_stop"
                app:srcCompat="@drawable/ic_stop" />

            <ImageButton
                android:id="@+id/imageButtonRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:background="?android:attr/colorBackground"
                android:rotation="0"
                android:src="@drawable/ic_right"
                app:srcCompat="@drawable/ic_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonLeftDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:rotation="-45"
                android:src="@drawable/ic_left"
                app:srcCompat="@drawable/ic_left" />

            <ImageButton
                android:id="@+id/imageButtonDown"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:src="@drawable/ic_down"
                app:srcCompat="@drawable/ic_down" />

            <ImageButton
                android:id="@+id/imageButtonRightDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/colorBackground"
                android:rotation="45"
                android:src="@drawable/ic_right"
                app:srcCompat="@drawable/ic_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>